/* pages/homepage/homepage.wxss */
@import "../homepage/Tample/classifyBtn-tpl.wxss";
@import "../homepage/Tample/locateInfo-tpl.wxss";

.container {
    display: flex;
    flex-direction: column;
}

.settings {
    width: 100rpx;
    height: 100rpx;
    margin-top: 120rpx;
    margin-left: 40rpx;
}

.two {
    position: relative;
    display: flex;
    flex-direction: row;
    text-align: center;
    justify-content: center;
    align-items: center;
    margin-top: -120rpx;
}

.navUp {
    font-family: "黑体";
    font-size: 31rpx;
    color: #A6A6A6;
}

.icon-arrow-down {
    color: #A6A6A6;
    width: 10rpx;
    height: 10rpx;
    margin-left: 0rpx;
    margin-top: -25rpx;
}



.position {
    position: relative;
    font-family: "黑体";
    font-size: 30rpx;
    color: #AEF516;
    margin-top: 5rpx;
    text-align: center;
    justify-content: center;
}

.search {
    display: flex;
    flex-direction: row;
    width: 100%;
    margin-top: 10rpx;
    align-items: center;
}

.input {
    position: relative;
    margin: 30rpx 0;
    border-radius: 50rpx;
    width: 660rpx;
    height: 67rpx;
    margin-left: auto;
    margin-right: auto;
    background-color: #F6F6F6;
    font-size: 25rpx;
    font-family: "黑体";
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.searchImg {
    position: absolute;
    right: 20rpx;
    font-size: 40rpx;
    color: #A6A6A6;
    text-align: center;
}

.classify {
    position: relative;
    margin-top: 28rpx;
    margin-left: 50rpx;
    font-size: 35rpx;
    font-weight: bold;
    font-family: "黑体";
}

.line {
    position: relative;
    margin-top: 2rpx;
    margin-left: 45rpx;
    width: 160rpx;
    height: 5rpx;
    border-radius: 50rpx;
    background-color: #AEF516;
}

.fourBtns {
    position: relative;
    white-space: nowrap;
    width: 100%;
    margin-top: 30rpx;
    
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
    display: none;
}

.title2-container {
    position: relative;
    margin-top: 70rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.title2 {
    margin-left: 50rpx;
    font-size: 35rpx;
    font-weight: bold;
    font-family: "黑体";
}

.line2 {
    position: relative;
    margin-top: 2rpx;
    margin-left: 45rpx;
    width: 219rpx;
    height: 5rpx;
    border-radius: 50rpx;
    background-color: #AEF516;
}

.moreInfo {
    position: relative;
    display: inline-block;
    font-family: "黑体";
    font-size: 27rpx;
    color: #1B1B21;
    margin-left: 350rpx;
}


page {
    background-color: #FFFFFF;
}