.newsContainer {
    position: relative;
    display: flex;
    flex-direction: row;
    margin-left: 52rpx;
    margin-top: 20rpx;
    width: 654rpx;
    height: 200rpx;
    align-items: center;
    justify-content: center;
    box-shadow: -10rpx 10rpx 5px #f7f7f7;
}

.newsImg-container {
    position: relative;
    width: 144rpx;
    height: 144rpx;
    margin-left: 20rpx;
}

.newsImg {
    position: relative;
    width: 144rpx;
    left: 0;
    top: 0;
}

.content-container {
    position: relative;
    display: flex;
    flex-direction: column;
    margin-left: 25rpx;
    line-height: 45rpx;
}

.newsTitle {
    position: relative;
    font-family: "黑体";
    font-size: 26rpx;
    color: #8894A2;
}

.newsContent {
    position: relative;
    font-family: "黑体";
    font-size: 30rpx;
    color: #26262E;
}

.newsInfo {
    position: relative;
    display: flex;
    flex-direction: row;
}

.newsFrom {
    position: relative;
    font-family: "黑体";
    font-size: 26rpx;
    color: #8894A2;
}

.newsTime {
    position: relative;
    margin-left: 30rpx;
    font-family: "黑体";
    font-size: 26rpx;
    color: #8894A2;
}