.my {
  padding: 0 24rpx;
  margin-top: 200rpx;
  position: relative;
}
.my .userinfo {
  padding-left: 24rpx;
}
.my .userinfo .user-icon {
  height: 120rpx;
  width: 120rpx;
  margin-top: 40rpx;
  border-radius: 60rpx;
}
.my .userinfo .username {
  color: #1b1b21;
  margin-top: 20rpx;
  font-size: 48rpx;
  line-height: 64rpx;
}
.my .menu-list {
  margin-top: 60rpx;
}
.my .menu-list .li {
  margin: 30rpx;
  padding: 20rpx 0;
}
.my .menu-list .li .href {
  width: 220rpx;
  display: flex;
  align-items: flex-end;
  justify-content: start;
}
.my .menu-list .li .href .icon {
  padding: 0 5rpx;
  font-size: 50rpx;
}
.my .menu-list .li .href .text {
  display: inline-block;
  margin-left: 10rpx;
}
.my .background1 {
  height: 1160rpx;
  position: absolute;
  top: 80rpx;
  right: -250rpx;
  z-index: -1;
}
.my .background2 {
  height: 1000rpx;
  position: absolute;
  top: 140rpx;
  right: -150rpx;
  z-index: -2;
  filter: opacity(20%);
}
