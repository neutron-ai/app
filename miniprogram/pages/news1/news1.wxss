/* pages/news1/news1.wxss */
.news1-container {
    display: flex;
    flex-direction: column;
}

.img-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 1126rpx;
}

.bigImg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
}

::-webkit-scrollbar {
    width:0;
    height:0;
    color:transparent;
    display:none;
  }

.nav {
    position: fixed;
    display: flex;
    flex-direction: row;
    margin-top: 88rpx;
    align-items: center;
    width: 100%;
    height: 80rpx;
}

.back-icon {
    float: left;
    margin-left: 48rpx;
    font-size: 48rpx;
    font-weight: bold;
    color: #FFFFFF;
}

.info-container {
    position: relative;
    margin-top: 430rpx;
    margin-left: 48rpx;
    width: 654rpx;
    display: flex;
    flex-direction: column;
}

.info {
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.from {
    position: relative;
    font-family: "黑体";
    font-size: 24rpx;
    color: #d6dbde;
}

.time {
    position: relative;
    margin-left: 20rpx;
    font-family: "黑体";
    font-size: 24rpx;
    color: #d6dbde;
}

.title {
    position: relative;
    margin-top: 15rpx;
    font-family: "黑体";
    font-size: 32rpx;
    font-weight: bold;
    color: #FFFFFF;
}

.text-container {
    position: relative;
    display: flex;
    flex-direction: column;
    margin-top: 30rpx;
    border-top-left-radius: 35rpx;
    border-top-right-radius: 35rpx;
    background-color: #fff;
    height: 990rpx;
    align-items: center;
    z-index: 10;
}

.headIcon {
    position: relative;
    display: inline-flex;
    flex-direction: row;
    margin-top: 50rpx;
    width: 660rpx;
    height: 113rpx;
}

.icon-from {
    position: relative;
    display: flex;
    flex-direction: row;
    width: 208rpx;
    height: 113rpx;
    background-color: #F6F2FF;
    align-items: center;
    justify-content: center;
    border-radius: 20rpx;
}

.img-from {
    position: relative;
    width: 58rpx;
    height: 78rpx;
}

.word {
    position: relative;
    margin-left: 15rpx;
    font-family: "黑体";
    font-size: 26rpx;
    color: #504f58;
}

.icontime {
    position: relative;
    display: flex;
    flex-direction: row;
    margin-left: auto;
    margin-right: auto;
    width: 208rpx;
    height: 113rpx;
    background-color: #F6F2FF;
    align-items: center;
    justify-content: center;
    border-radius: 20rpx;
}

.time-Icon {
    position: relative;
    font-size: 44rpx;
    color: #8352ff;
}

.read{
    position: relative;
    display: flex;
    flex-direction: row;
    margin-right: 0;
    width: 208rpx;
    height: 113rpx;
    background-color: #F6F2FF;
    align-items: center;
    justify-content: center;
    border-radius: 20rpx;
}

.readIcon {
    position: relative;
    font-size: 44rpx;
    color: #8352ff;
}

.text-title {
    position: relative;
    margin-top: 45rpx;
    width: 654rpx;
    font-family: "黑体";
    font-size: 28rpx;
    line-height: 40rpx;
    font-weight: bold;
    color: #26262E;
}

.wel {
    position: relative;
    margin-top: 70rpx;
    width: 654rpx;
    color: #57575e;
    font-size: 26rpx;
    font-family: "黑体";
    line-height: 44rpx;
}

.p {
    position: relative;
    text-indent: 2em;
    width: 654rpx;
    color: #57575e;
    font-size: 26rpx;
    font-family: "黑体";
    line-height: 44rpx;
}

.text-box {
    position: relative;
    display: flex;
    flex-direction: column;
    margin-top: 30rpx;
    border-top-left-radius: 35rpx;
    border-top-right-radius: 35rpx;
    background-color: #fff;
    margin-left: 35rpx;
    margin-right: 35rpx;
    height: 990rpx;
    align-items: center;
    z-index: 10;
}